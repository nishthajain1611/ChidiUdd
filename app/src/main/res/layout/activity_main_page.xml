<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nishthajain.chidiudd.Main_page"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Best"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#1b564c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/score"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/imageView"
        android:textColor="#666666" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/vol_full"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:src="@drawable/volume_up" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/vol_mute"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"

        android:src="@drawable/muted" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/rsz_tweet4"

        android:layout_below="@+id/vol_full"

        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chidi Udd"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#1b564c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Coz age is just a number"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
       android:layout_centerHorizontal="true"
        android:elevation="0dp"
        android:textColor="#666666" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:id="@+id/play"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:elevation="14dp"
        android:background="#1ac799"
        android:textColor="#fff5e0"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how to play"
        android:id="@+id/howtoplay"
        android:visibility="visible"
        android:layout_below="@+id/play"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:elevation="24dp"
        android:textColor="#fff5e0"
        android:background="#1b564c"
        android:width="200dp" />


</RelativeLayout>
